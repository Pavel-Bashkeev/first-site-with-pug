mixin posterSection(titleText, linkText, customClass)
	section.poster.section
		.container.poster__container
			h3.poster__title.title.df.al-c
				span.title__text= titleText
			.poster-items.df.al-c.wrap(class=customClass)
				block
			if linkText
				button.poster-link.db.btn-reset= linkText


+posterSection('Trending TV Shows', '', 'poster-serials')

+posterSection('Trending Movies', 'See more', 'poster-movies')
